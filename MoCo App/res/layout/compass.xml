<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:id="@+id/compass" android:layout_height="wrap_content" android:layout_width="wrap_content"
              android:text="Compass"/>
    <TextView android:id="@+id/azimuth" android:layout_height="wrap_content" android:layout_width="fill_parent"/>
    <TextView android:id="@+id/pitch" android:layout_height="wrap_content" android:layout_width="fill_parent"/>
    <TextView android:id="@+id/roll" android:layout_height="wrap_content" android:layout_width="fill_parent"/>
    <TextView android:id="@+id/location" android:layout_height="wrap_content" android:layout_width="fill_parent"/>
    <de.htw.toto.moco.app.gui.views.CompassView android:id="@+id/mycompass" android:layout_height="fill_parent"
                                                android:layout_width="fill_parent"/>
</LinearLayout>