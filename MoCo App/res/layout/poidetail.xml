<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:id="@+id/poiDetailName"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/poiDetailLat"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/poiDetailLong"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/poiDetailDist"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/poiDetailNavButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/navigateToPoi"
            android:textSize="20dp"
            android:padding="15dp" />
</LinearLayout>